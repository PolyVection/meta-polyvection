[Unit]
Description=Spotify Connect
After=network-online.target

[Service]
Type=idle
User=root
ExecStart=/usr/sbin/librespot --name VoltaStream --bitrate 320 --backend alsa --disable-audio-cache
Restart=always
RestartSec=10
StartLimitInterval=30
StartLimitBurst=20

[Install]
WantedBy=multi-user.target
